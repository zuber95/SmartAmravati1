<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ash.smartamravati.activity.WaterDeptNext3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"

                android:text="Documnets required for a new connection"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="70dp"
                android:textSize="22sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text =" 1. Municipal building sanctioned plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="110dp"
                android:textSize="22sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text =" 2. Municipal Tax assessment receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="150dp"
                android:textSize="22sp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text =" 3. Occupancy certificate and road cutting permission "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/firstName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"

                android:layout_marginTop="200dp"

                android:textSize="25sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="200dp"
                android:background="@android:color/holo_blue_bright"
                android:text="Upload"
                android:textSize="20sp" />
            <EditText

                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"

                android:layout_marginTop="260dp"

                android:textSize="25sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="260dp"
                android:background="@android:color/holo_blue_bright"
                android:text="Upload"
                android:textSize="20sp" />
            <EditText

                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"

                android:layout_marginTop="330dp"

                android:textSize="25sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="330dp"
                android:background="@android:color/holo_blue_bright"
                android:text="Upload"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="420dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center"
                android:text="Submit"
                android:textSize="25sp" />

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
