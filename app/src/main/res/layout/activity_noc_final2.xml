<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.smartamravati.activity.NocFinal2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Land Details"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:hint="Noc for fire provisional number"
                android:inputType="number"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:hint="Survey No"
                android:inputType="number"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:hint="Hissa No"
                android:inputType="number"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                android:hint="City survey no"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="250dp"
                android:hint="Plot no"
                android:inputType="number"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:hint="Road no"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="350dp"
                android:hint="Property no"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="400dp"
                android:hint="City/town/Village"
                android:textSize="25sp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="470dp"
                android:background="@color/colorPrimary"
                android:hint="Next "
                android:textColor="#fff"
                android:textSize="30sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

