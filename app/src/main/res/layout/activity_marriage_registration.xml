<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.smartamravati.activity.MarriageRegistration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Marriage Details"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />



            <EditText
                android:id="@+id/firstName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:hint="Husband Name(English)"
                android:textSize="25sp" />

            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="100dp"
                android:hint="Husband Name(Marathi)"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="150dp"
                android:hint="Wife Name(English)"

                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="200dp"
                android:hint="Wife Name(Marathi)"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="250dp"
                android:hint=" Address(English)"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:hint=" Address(Marathi)"
                android:textSize="25sp" />
            <EditText

                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="350dp"
                android:hint="Maariage Date"
                android:textSize="25sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="420dp"
                android:background="@color/bg_main"
                android:textSize="30sp"
                android:gravity="center"
                android:text="Next" />
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
